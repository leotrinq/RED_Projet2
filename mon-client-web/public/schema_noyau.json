{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sch√©ma noyau message",
  "type": "object",
  "properties": {
    "fil": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "titre": { "type": "string", "minLength": 1 },
        "participants": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "minItems": 2,
          "maxItems": 2
        }
      },
      "required": ["id", "titre", "participants"]
    },
    "message": {
      "type": "object",
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "expediteur": { "type": "string", "minLength": 1 },
        "date": { "type": "string", "format": "date-time" },
        "texte": { "type": "string", "minLength": 1 },
        "structure": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["oui_non", "choix_multiple", "case_cocher", "texte_libre"]
          },
          "question": { "type": "string", "minLength": 1 },
          "options": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "required": ["type", "question"],
        "if": {
          "properties": { "type": { "const": "choix_multiple" } }
        },
        "then": {
          "required": ["options"],
          "properties": {
            "options": {
              "minItems": 2
            }
          }
        },
        "else": {
          "not": {
            "required": ["options"]
          }
        },
        "additionalProperties": false
      }
      },
      "required": ["id", "expediteur", "date", "texte", "structure"]
    }
  },
  "required": ["fil", "message"]
}
